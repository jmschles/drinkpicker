<div class="suggestion">
  <h3><%= random_suggest %></h3>
</div>

<div class="drink">
  <div class="name">
    <h4><%= @drink.name %></h4>
  </div>
  <div class="components">
    <ul>
      <% @drink.components.each do |c| %>
        <li>
          <i class="icon-glass"></i>
          <strong><%= c.quantity %></strong> <%= c.ingredient.name %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="photo">
    <%= filepicker_image_tag @drink.filepicker_url, w: 198, h: 198, fit: 'scale' %>
  </div>
  <div class="instructions">
    <p><%= @drink.instructions %></p>
  </div>
</div>

<div class="reject">
  <a href="<%= root_url %>">
    <%= refresh_text %>
  </a>
</div>